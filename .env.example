# AstroGuard Professional Configuration Template
# Copy this file to .env and fill in your configuration values

# NASA API Configuration
NASA_API_KEY=your_nasa_api_key_here
# Get your free NASA API key from: https://api.nasa.gov/

# Flask Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration (if using database)
# DATABASE_URL=sqlite:///astroguard.db
# DATABASE_URL=postgresql://user:password@localhost/astroguard

# External API Endpoints (optional overrides)
NASA_NEO_API_URL=https://api.nasa.gov/neo/rest/v1
JPL_HORIZONS_URL=https://ssd-api.jpl.nasa.gov/horizons_api
USGS_EARTHQUAKE_URL=https://earthquake.usgs.gov/fdsnws/event/1/query

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
CACHE_TIMEOUT=3600
REQUEST_TIMEOUT=30

# Security Settings (for production)
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=False
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/astroguard.log
ENABLE_ACCESS_LOGS=True

# Feature Flags
ENABLE_3D_VISUALIZATION=True
ENABLE_IMPACT_SIMULATION=True
ENABLE_PROFESSIONAL_APIS=True
ENABLE_DIAGNOSTIC_TOOLS=True

# Professional Features (Enterprise)
ENTERPRISE_MODE=False
ANALYTICS_ENABLED=False
CUSTOM_BRANDING=False

# Deployment Settings
HOST=0.0.0.0
PORT=5000
WORKERS=4

# Monitoring and Health Checks
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=False
SENTRY_DSN=your-sentry-dsn-here

# Third-party Integrations
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@example.com
# EMAIL_PASSWORD=your-app-password